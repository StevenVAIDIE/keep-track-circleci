{
  "name": "keep-track-circleci-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "styled-components": "^5.3.5",
    "webextension-polyfill": "^0.9.0"
  },
  "type": "module",
  "scripts": {
    "extension:build": "yarn run lib:build && yarn run web-ext build --source-dir dist --artifacts-dir dist --overwrite-dest",
    "extension:lint": "yarn run lib:build && yarn run web-ext lint --source-dir dist",
    "extension:publish": "yarn run web-ext sign --source-dir dist",
    "extension:run": "web-ext run --source-dir dist",
    "lib:build": "node ./build.js",
    "lib:build:watch": "node ./build.js --watch"
  },
  "devDependencies": {
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@types/styled-components": "^5.1.25",
    "@types/webextension-polyfill": "^0.9.0",
    "esbuild": "^0.14.27",
    "esbuild-plugin-copy": "^1.2.1",
    "typescript": "^4.6.3",
    "web-ext": "^6.8.0"
  }
}
